function WatchCatalog() {
  const [watch, setWatch] = useState([]);

  useEffect(() => {
    // Effectuez une requête API pour récupérer les données de la base de données
    fetch("http://localhost:3001/users")
      .then((response) => response.json())
      .then((data) => {
        console.log(data); // Affichez les données dans la console si nécessaire
        setWatch(data); // Met à jour l'état avec les données récupérées
      })
      .catch((error) =>
        console.error("Erreur lors de la récupération des données:", error)
      );
  }, []);

